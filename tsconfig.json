{
  // See more:
  // https://www.typescriptlang.org/tsconfig/
  "compilerOptions": {
    // Type Checking
    "strict": true,
    // Modules
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    // Emit
    "outDir": "./dist",
    // Interlop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Language and Environment
    "target": "ES2020",
    // Completeness
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
